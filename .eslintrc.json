{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "useTabs": false,
        "quoteProps": "preserve",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 120,
        "tabWidth": 4,
        "parser": "flow",
        "semi": false
      }
    ]
  },

  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  }
}